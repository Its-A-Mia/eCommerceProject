generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String @default(cuid()) @id
  title       String
  price       Decimal @db.Decimal(10,2)
  category    String
  description String
  color       String
  rating      Int     @default(0)
  createdAt   DateTime @default(now()) @map(name: "created_at") 
  updatedAt   DateTime @updatedAt
}

model User {
  id String @default(cuid()) @id
  name  String?
  email String
  hash String
  createdAt DateTime @default(now()) @map(name: "created_at") 
  updatedAt   DateTime @updatedAt
}